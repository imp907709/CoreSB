{
  "iisSettings": {
    "windowsAuthentication": true,
    "anonymousAuthentication": false
  },
  "ConnectionStrings": {
    "LocalMsSQlDbConnection": "Server=WINDOWS-VCTMMRG;Database=coreSB;Trusted_Connection=True;",
    "LocalDockerMsSQlDbConnection": "Server=localhost;Database=coreSB;Trusted_Connection=True;"
  },
  "App": {
    "AllowLoginDebug": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    },
    "Console": {
      "IncludeScopes": true
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "RegistrationSettings": {
    "ContextType": "SQL"
    //SQL,SQLLite,InMemmory
  }
}
