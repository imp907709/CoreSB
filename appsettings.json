{
  "iisSettings": {
    "windowsAuthentication": true,
    "anonymousAuthentication": false
  },
  "ConnectionStrings": {
    "CostControlDb": "Server=(local);Database=DbName;Trusted_Connection=True;",
    "LocalDbConnection": "Server=(local);Database=DbName;Trusted_Connection=True;",
    "LocalNewOrderConnection": "Server=(local);Database=DbName;Trusted_Connection=True;"
  },
  "App": {
    "AllowLoginDebug": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
